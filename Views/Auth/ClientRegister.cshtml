@using icounselvault.Utility
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/Auth/Login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - iCounselVault</title>
</head>
<div class="wrapper">
    <div class="logo">
        <img src="~/img/logo-high-res.png" alt="iCounselVault Logo">
    </div>
    <div class="text-center mt-4 name">
        Create an Account
    </div>
    @Html.ValidationSummary()
    <form class="p-3 mt-3" action="@Url.Action("AddClient", "Auth")" method="post">
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="username" id="username" placeholder="Username">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="password" name="password" id="password" placeholder="Password">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="password" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="Name" id="Name" placeholder="Full Name">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-calendar"></span>
            <input type="date" name="DateOfBirth" id="DateOfBirth" placeholder="Date of Birth">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="Gender" id="Gender" placeholder="Gender">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-id-card"></span>
            <input type="text" name="NIC" id="NIC" placeholder="NIC">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fa fa-home"></span>
            <input type="text" name="Address" id="Address" placeholder="Address">
        </div>
        <div class="mb-4">
            <label>Country</label>
            <select name="Country" id="Country" class="form-control form-control-sm">
                    @foreach (var country in Enum.GetValues(typeof(AppConstants.Countries)))
                    {
                            <option value="@country">@country</option>
                    }
            </select>
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fa fa-phone"></span>
            <input type="text" name="Contact" id="Contact" placeholder="Contact Number">
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-envelope"></span>
            <input type="email" name="Email" id="email" placeholder="Email">
        </div>
        <button class="btn mt-3" type="submit">Register</button>
    </form>

    <div class="text-center fs-6">
        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Index">Login</a>
    </div>
</div>