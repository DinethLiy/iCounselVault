@model IEnumerable<icounselvault.Models.Profiles.Counselor>
@{
    ViewData["Title"] = "View Counselors";
    dynamic? layoutPath = TempData["layout"];
    Layout = layoutPath;
    int counselorID = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Counselors</h1>
        @if (layoutPath == "../../Views/Shared/_SuperAdminLayout")
        {
            <a class="btn btn-success btn-icon-split" asp-action="SuperAdminShowAddEditCounselorUser" asp-route-userId=-1 asp-route-encryptedPassword="-1" asp-controller="ManageCounselors"><span class="text">Create Counselor User</span></a>
        }
        else
        {
            <a class="btn btn-success btn-icon-split" asp-action="AdminShowAddEditCounselorUser" asp-route-userId=-1 asp-route-encryptedPassword="-1" asp-controller="ManageCounselors"><span class="text">Create Counselor User</span></a>
        }
    </div>

    <div class="col">
        
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Counselors</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Country</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var counselor in Model)
                        {
                            counselorID = counselor.COUNSELOR_ID;
                            <tr>
                                <td>@counselor.COUNSELOR_ID</td>
                                <td>@counselor.user.USERNAME</td>
                                <td>@counselor.NAME</td>
                                <td>@counselor.DOB</td>
                                <td>@counselor.GENDER</td>
                                <td>@counselor.ADDRESS</td>
                                <td>@counselor.COUNTRY</td>
                                <td>@counselor.CONTACT_NUM</td>
                                <td>@counselor.EMAIL</td>
                                <td>@counselor.COUNSELOR_STATUS</td>
                                <td>
                                    <center>
                                        @if (layoutPath == "../../Views/Shared/_SuperAdminLayout")
                                        {
                                            <a class="btn btn-info btn-icon-split" asp-action="SuperAdminShowEditCounselor" asp-route-counselorId=@counselor.COUNSELOR_ID asp-controller="ManageCounselors"><span class="text">Edit</span></a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-info btn-icon-split" asp-action="AdminShowEditCounselor" asp-route-counselorId=@counselor.COUNSELOR_ID asp-controller="ManageCounselors"><span class="text">Edit</span></a>
                                        }
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>