@model IEnumerable<icounselvault.Models.Profiles.Counselor>
@{
    ViewData["Title"] = "View Counselors";
    int counselorID = 0;
}
<body>
    <h1>Manage Counselors</h1>
    <button>
        @Html.ActionLink(
        "Create Counselor User",
        "ShowAddEditCounselorUser",
        "ManageCounselors",
        new { userId = -1, encryptedPassword = "-1" }
        )
    </button>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">DOB</th>
                <th scope="col">Gender</th>
                <th scope="col">NIC</th>
                <th scope="col">Address</th>
                <th scope="col">Country</th>
                <th scope="col">Contact</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var counselor in Model)
            {
                counselorID = counselor.COUNSELOR_ID;
                <tr>
                    <th scope="row">@counselor.COUNSELOR_ID</th>
                    <td>@counselor.user.USERNAME</td>
                    <td>@counselor.NAME</td>
                    <td>@counselor.DOB</td>
                    <td>@counselor.GENDER</td>
                    <td>@counselor.NIC</td>
                    <td>@counselor.ADDRESS</td>
                    <td>@counselor.COUNTRY</td>
                    <td>@counselor.CONTACT_NUM</td>
                    <td>@counselor.EMAIL</td>
                    <td>@counselor.COUNSELOR_STATUS</td>
                    <td>
                        @Html.ActionLink(
                        "Edit",                                                           
                        "ShowEditCounselor",                                                
                        "ManageCounselors",                                                    
                        new { counselorId = counselor.COUNSELOR_ID }
                        )
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>