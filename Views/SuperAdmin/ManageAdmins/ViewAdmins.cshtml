@model IEnumerable<icounselvault.Models.Auth.User>
@{
    ViewData["Title"] = "View Admins";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    int adminID = 0;
}
<body>
    <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Admins</h1>
        </div>
    
    <div class="col">
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditAdmin" asp-route-userId=0 asp-route-encryptedPassword="-1" asp-controller="ManageAdmins">
            <span class="text">Create Admin</span>
        </a>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Admins</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            adminID = admin.USER_ID;
                            <tr>
                                <td>@admin.USER_ID</td>
                                <td>@admin.USERNAME</td>
                                <td>********</td>
                                <td>@admin.PRIVILEGE_TYPE</td>
                                <td>@admin.USER_STATUS</td>
                                <td>
                                    <center>
                                    <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditAdmin" asp-route-userId=@admin.USER_ID asp-route-encryptedPassword=@admin.PASSWORD asp-controller="ManageAdmins">
                                        <span class="text">Edit</span>
                                    </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>