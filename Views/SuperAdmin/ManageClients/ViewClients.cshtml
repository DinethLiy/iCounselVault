@model IEnumerable<icounselvault.Models.Profiles.Client>
@{
    ViewData["Title"] = "View Clients";
    dynamic? layoutPath = TempData["layout"];
    Layout = layoutPath;
    int clientID = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Clients</h1>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Clients</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Country</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            clientID = client.CLIENT_ID;
                            <tr>
                                <td>@client.CLIENT_ID</td>
                                <td>@client.user.USERNAME</td>
                                <td>@client.CLIENT_CODE</td>
                                <td>@client.NAME</td>
                                <td>@client.DOB</td>
                                <td>@client.GENDER</td>
                                <td>@client.ADDRESS</td>
                                <td>@client.COUNTRY</td>
                                <td>@client.CONTACT_NUM</td>
                                <td>@client.EMAIL</td>
                                <td>@client.CLIENT_STATUS</td>
                                <td>
                                    <center>
                                        @if (layoutPath == "../../Views/Shared/_SuperAdminLayout")
                                        {
                                            <a class="btn btn-info btn-icon-split" asp-action="SuperAdminShowEditClient" asp-route-clientId=@client.CLIENT_ID asp-controller="ManageClients"><span class="text">Edit</span></a>
                                        }
                                        else 
                                        {
                                            <a class="btn btn-info btn-icon-split" asp-action="AdminShowEditClient" asp-route-clientId=@client.CLIENT_ID asp-controller="ManageClients"><span class="text">Edit</span></a>
                                        }
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>