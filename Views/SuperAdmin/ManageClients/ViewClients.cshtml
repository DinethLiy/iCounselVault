@model IEnumerable<icounselvault.Models.Profiles.Client>
@{
    ViewData["Title"] = "View Clients";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    int clientID = 0;
}
<head>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Styles -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/StylePack/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/StylePack/sb-admin-2.min.js"></script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/StylePack/demo/chart-area-demo.js"></script>
    <script src="~/js/StylePack/demo/chart-pie-demo.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/StylePack/demo/datatables-demo.js"></script>
</head>
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage Clients</h1>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Clients</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>NIC</th>
                            <th>Address</th>
                            <th>Country</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            clientID = client.CLIENT_ID;
                            <tr>
                                <td>@client.CLIENT_ID</td>
                                <td>@client.user.USERNAME</td>
                                <td>@client.CLIENT_CODE</td>
                                <td>@client.NAME</td>
                                <td>@client.DOB</td>
                                <td>@client.GENDER</td>
                                <td>@client.NIC</td>
                                <td>@client.ADDRESS</td>
                                <td>@client.COUNTRY</td>
                                <td>@client.CONTACT_NUM</td>
                                <td>@client.EMAIL</td>
                                <td>@client.CLIENT_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowEditClient" asp-route-clientId=@client.CLIENT_ID asp-controller="ManageClients">
                                        <span class="text">Edit</span>
                                    </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>