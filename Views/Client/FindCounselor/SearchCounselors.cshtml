@model IEnumerable<icounselvault.Models.Profiles.Counselor>
@{
    ViewData["Title"] = "Find a Counselor";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    dynamic? counselRequest = TempData["counselRequest"];
    int counselorID = 0;
}
<head>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Styles -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/StylePack/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/StylePack/sb-admin-2.min.js"></script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/StylePack/demo/chart-area-demo.js"></script>
    <script src="~/js/StylePack/demo/chart-pie-demo.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/StylePack/demo/datatables-demo.js"></script>
</head>
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Find a Career Guidance Counselor</h1>
    </div>
    @if (counselRequest != null)
    {
        <!-- Counselor Card -->
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">You've already requested guidance from a counselor</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3"><label class="form-label">Counselor: @counselRequest.counselor.NAME</label></div>
                    <div class="mb-3"><label class="form-label">Date of Birth: @counselRequest.counselor.DOB</label></div>
                    <div class="mb-3"><label class="form-label">Gender: @counselRequest.counselor.GENDER</label></div>
                    <div class="mb-3"><label class="form-label">Country: @counselRequest.counselor.COUNTRY</label></div>
                    <div class="mb-3"><label class="form-label">Contact Number: @counselRequest.counselor.CONTACT_NUM</label></div>
                    <div class="mb-3"><label class="form-label">Email: @counselRequest.counselor.EMAIL</label></div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Counselors</h6>
                </div>
                <div class="card-body">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Country</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var counselor in Model)
                            {
                                counselorID = counselor.COUNSELOR_ID;
                                <tr>
                                    <td>@counselor.NAME</td>
                                    <td>@counselor.DOB</td>
                                    <td>@counselor.GENDER</td>
                                    <td>@counselor.COUNTRY</td>
                                    <td>@counselor.CONTACT_NUM</td>
                                    <td>@counselor.EMAIL</td>
                                    <td>
                                        <center>
                                            <a class="btn btn-info btn-icon-split" asp-action="ShowAddCounselRequest" asp-route-counselorId=@counselor.COUNSELOR_ID asp-controller="ClientCounselRequests">
                                                <span class="text">Select</span>
                                            </a>
                                        </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</body>