@model IEnumerable<icounselvault.Models.Profiles.Counselor>
@{
    ViewData["Title"] = "Find a Counselor";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    dynamic? counselRequest = TempData["counselRequest"];
    int counselorID = 0;
}
<body>
    <h1>Find a Career Guidance Counselor</h1>
    @if (counselRequest != null)
    {
        <h3>You've already requested guidance from a counselor</h3>
        <div><label>Counselor: @counselRequest.counselor.NAME</label></div>
        <div><label>Date of Birth: @counselRequest.counselor.DOB</label></div>
        <div><label>Gender: @counselRequest.counselor.GENDER</label></div>
        <div><label>Country: @counselRequest.counselor.COUNTRY</label></div>
        <div><label>Contact Number: @counselRequest.counselor.CONTACT_NUM</label></div>
        <div><label>Email: @counselRequest.counselor.EMAIL</label></div>
    }
    else
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Country</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var counselor in Model)
                {
                    counselorID = counselor.COUNSELOR_ID;
                    <tr>
                        <td>@counselor.NAME</td>
                        <td>@counselor.DOB</td>
                        <td>@counselor.GENDER</td>
                        <td>@counselor.COUNTRY</td>
                        <td>@counselor.CONTACT_NUM</td>
                        <td>@counselor.EMAIL</td>
                        <td>
                            @Html.ActionLink(
                        "Select",
                        "ShowAddCounselRequest",
                        "ClientCounselRequests",
                        new { counselorId = counselor.COUNSELOR_ID }
                        )
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
</body>