@{
    ViewData["Title"] = "Your Profile";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    dynamic? loggedInClient = TempData["loggedInClient"];
}
<head>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Styles -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/StylePack/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/StylePack/sb-admin-2.min.js"></script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/StylePack/demo/chart-area-demo.js"></script>
    <script src="~/js/StylePack/demo/chart-pie-demo.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/StylePack/demo/datatables-demo.js"></script>
</head>
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Your Profile</h1>
    </div>

    <!-- Profile Card -->
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Profile Details</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3"><label class="form-label">Name: @loggedInClient.NAME</label></div>
                    <div class="mb-3"><label class="form-label">Date of Birth: @loggedInClient.DOB</label></div>
                    <div class="mb-3"><label class="form-label">Gender: @loggedInClient.GENDER</label></div>
                    <div class="mb-3"><label class="form-label">NIC: @loggedInClient.NIC</label></div>
                    <div class="mb-3"><label class="form-label">Primary Address: @loggedInClient.ADDRESS</label></div>
                    <div class="mb-3"><label class="form-label">Country: @loggedInClient.COUNTRY</label></div>
                    <div class="mb-3"><label class="form-label">Contact Number: @loggedInClient.CONTACT_NUM</label></div>
                    <div class="mb-3"><label class="form-label">Email: @loggedInClient.EMAIL</label></div>
                    <div class="mb-3">
                        <a class="btn btn-info btn-icon-split" asp-action="ShowEditClientProfile" asp-controller="ClientProfile">
                            <span class="text">Edit</span>
                        </a>
                    </div>
                    <div class="mb-3">
                        <a class="btn btn-info btn-icon-split" asp-action="ShowClientExperience" asp-controller="ClientProfile">
                            <span class="text">View Past Experiences</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
</body>
