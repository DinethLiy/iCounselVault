@model IEnumerable<icounselvault.Models.Counseling.ClientGuidanceHistory>
@{
    ViewData["Title"] = "View Guidance History";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    int cliGuidHistID = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Your History with Career Guidance</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowClientNewGuidanceHistory" asp-controller="GuidanceClient">
            <span class="text">New Guidance Record</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Guidance History</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Date</th>
                            <th>Source</th>
                            <th>Guidance Advice</th>
                            <th>Satisfaction</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var guidanceHistory in Model)
                        {
                            cliGuidHistID = guidanceHistory.CLIENT_GUIDANCE_HISTORY_ID;
                            <tr>
                                <td>@guidanceHistory.CREATED_DATE</td>
                                @if (guidanceHistory.EXTERNAL_GUIDANCE_SOURCE == null)
                                {
                                    <td>iCounselVault Counselor</td>
                                }
                                else
                                {
                                    <td>@guidanceHistory.EXTERNAL_GUIDANCE_SOURCE</td>
                                }
                                <td>@guidanceHistory.GUIDANCE_ADVICE</td>
                                <td>@guidanceHistory.CLIENT_SATISFACTION</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowGuidanceRecordInfo" asp-route-cliGuidHistID=@cliGuidHistID asp-controller="GuidanceClient">
                                            <span class="text">Info</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>