@{
    ViewData["Title"] = "Add/Edit Past Experiences";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    dynamic? clientExperience = TempData["clientExperience"];
}
<body>
@if (clientExperience != null)
{
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Edit Past Experiences</h1>
            @Html.ValidationSummary()
        </div>

        <!-- Form Card -->
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Experience Details</h6>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("EditClientExperience", "ClientExperience")" method="post" class="form-group">
                        <div class="mb-3">
                            <label class="form-label">School Experience</label>
                            <input type="text" name="School" id="School" placeholder="School Experience.." value="@clientExperience.SCHOOL_EXPERIENCE" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Higher Education</label>
                            <input type="text" name="HigherEducation" id="HigherEducation" placeholder="Higher Education.." value="@clientExperience.HIGHER_EDU_EXPERIENCE" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Job Experience</label>
                            <input type="text" name="Career" id="Career" placeholder="Job Experience.." value="@clientExperience.JOB_EXPERIENCE" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Preferred Career Field</label>
                            <input type="text" name="PreferredCareer" id="PreferredCareer" placeholder="Prefered Career Field.." value="@clientExperience.PREFERED_CAREER_FIELD" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
}
else
{
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Add Past Experiences</h1>
            @Html.ValidationSummary()
        </div>

        <!-- Form Card -->
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Experience Details</h6>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("AddClientExperience", "ClientExperience")" method="post" class="form-group">
                        <div class="mb-3">
                            <label class="form-label">School Experience</label>
                            <input type="text" name="School" id="School" placeholder="School Experience.." class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Higher Education</label>
                            <input type="text" name="HigherEducation" id="HigherEducation" placeholder="Higher Education.." class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Job Experience</label>
                            <input type="text" name="Career" id="Career" placeholder="Job Experience.." class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Preferred Career Field</label>
                            <input type="text" name="PreferredCareer" id="PreferredCareer" placeholder="Prefered Career Field.." class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
}
</body>