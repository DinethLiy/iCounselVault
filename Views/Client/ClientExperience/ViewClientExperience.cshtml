@{
    ViewData["Title"] = "Your Past Experiences";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    dynamic? clientExperience = TempData["clientExperience"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Your Past Experiences</h1>
    </div>

    <!-- Profile Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Experience Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">School Experience:</p>@clientExperience.SCHOOL_EXPERIENCE</label></div>
                <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Higher Education:</p> @clientExperience.HIGHER_EDU_EXPERIENCE</label></div>
                <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Career:</p> @clientExperience.JOB_EXPERIENCE</label></div>
                <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Preferred Career Field:</p> @clientExperience.PREFERED_CAREER_FIELD</label></div>
                @if (clientExperience.SURVEY_RESULT != null)
                {
                    <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Personality Traits Questionnaire Result:</p> <span class="text">@clientExperience.SURVEY_RESULT</span>
                        <br><br>
                        <a class="btn btn-success btn-icon-split" asp-action="Index" asp-controller="ClientSurvey">
                            <span class="text">Re-take Questionnaire</span>
                        </a>
                        
                        </label>
                    </div>
                }
                else
                {
                    <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Personality Traits Questionnaire Result:</p> <span class="text">Go through a short survey to automatically fill in this field</span>
                        <br><br>
                        <a class="btn btn-success btn-icon-split" asp-action="Index" asp-controller="ClientSurvey">
                            <span class="text">Start Questionnaire</span>
                        </a>
                        </label>
                        
                    </div>
                }
                <div class="mb-3"><label class="form-label"><p class="lead text-gray-900">Prefered Career Field:</p> @clientExperience.PREFERED_CAREER_FIELD</label></div>
                <div class="mb-3">
                    <a class="btn btn-info btn-icon-split" asp-action="ShowEditClientExperience" asp-controller="ClientExperience">
                        <span class="text">Edit</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
 